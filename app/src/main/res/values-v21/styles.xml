        <item name="android:colorPrimaryDark">@color/logoDark</item>
        <item name="android:actionBarStyle">@style/TTLEditor.ActionBar</item>
    </style>

    <style name="TTLEditor.ActionBar" parent="android:Widget.Material.Light.ActionBar.Solid">
