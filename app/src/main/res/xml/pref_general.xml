<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="onboot"
        android:title="@string/pref_title_onboot"
        android:summary="@string/pref_description_onboot"
        android:defaultValue="false" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="iface"
        android:title="@string/pref_title_iface"
        android:defaultValue="@string/pref_default_iface"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


    <EditTextPreference
        android:key="ttl"
        android:title="@string/pref_title_ttl"
        android:defaultValue="@string/pref_default_ttl"
        android:selectAllOnFocus="true"
        android:inputType="number"
        android:singleLine="true"
        android:maxLines="1" />

    <PreferenceCategory android:title="@string/pref_header_share" >
        <PreferenceScreen
            android:title="@string/pref_title_share"
            android:summary="@string/pref_description_share">

            <!-- android:data="https://play.google.com/store/apps/details?id=org.segin.ttleditor"
            <intent android:action="android.intent.action.SEND"

                android:mimeType="text/plain">
                <extra android:name="EXTRA_SUBJECT" android:value="Check out TTL Editor!" />
                <extra android:name="EXTRA_TEXT" android:value="Check out TTL Editor! https://play.google.com/store/apps/details?id=org.segin.ttleditor" />
            </intent> -->

        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>
